<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_orange"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/et_main_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin8dp"
        android:background="@color/dark_gray"
        android:gravity="center"
        android:hint="@string/select_video_card"
        android:importantForAutofill="no"
        android:inputType="none"
        android:padding="@dimen/padding8dp"
        android:textColor="@color/green"
        android:textColorHint="@color/light_red"
        android:textSize="@dimen/text28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_main_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin8dp"
        android:background="@color/dark_gray"
        android:gravity="center"
        android:hint="@string/select_video_card"
        android:importantForAutofill="no"
        android:inputType="none"
        android:padding="@dimen/padding8dp"
        android:textColor="@color/green"
        android:textColorHint="@color/light_red"
        android:textSize="@dimen/text28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_main_1" />

    <EditText
        android:id="@+id/et_main_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin8dp"
        android:background="@color/dark_gray"
        android:gravity="center"
        android:hint="@string/select_video_card"
        android:importantForAutofill="no"
        android:inputType="none"
        android:padding="@dimen/padding8dp"
        android:textColor="@color/green"
        android:textColorHint="@color/light_red"
        android:textSize="@dimen/text28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_main_2" />

    <EditText
        android:id="@+id/et_main_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin8dp"
        android:background="@color/dark_gray"
        android:gravity="center"
        android:hint="@string/select_video_card"
        android:importantForAutofill="no"
        android:inputType="none"
        android:padding="@dimen/padding8dp"
        android:textColor="@color/green"
        android:textColorHint="@color/light_red"
        android:textSize="@dimen/text28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_main_3" />

    <EditText
        android:id="@+id/et_main_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin8dp"
        android:background="@color/dark_gray"
        android:gravity="center"
        android:hint="@string/select_video_card"
        android:importantForAutofill="no"
        android:inputType="none"
        android:padding="@dimen/padding8dp"
        android:textColor="@color/green"
        android:textColorHint="@color/light_red"
        android:textSize="@dimen/text28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_main_4" />

</androidx.constraintlayout.widget.ConstraintLayout>